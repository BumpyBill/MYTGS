<Window x:Class="MYTGS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MYTGS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="377*"/>
        </Grid.RowDefinitions>
        <Label x:Name="UserName" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16"/>
        <ScrollViewer Margin="47,34,42,32" Grid.Row="1">
            <TextBox x:Name="TasksBlock" TextWrapping="Wrap" Text="Task"/>
        </ScrollViewer>

    </Grid>
</Window>
