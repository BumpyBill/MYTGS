<UserControl x:Class="MYTGS.Period"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MYTGS"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid ToolTip="{Binding Tooltip}" SizeChanged="Grid_SizeChanged">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" FontSize="14" Text="{Binding Description}" Foreground="White" Margin="2,0,0,0"  />
        <Label HorizontalAlignment="Left" Content="{Binding Roomcode}" Grid.Row="2" VerticalAlignment="Bottom" FontSize="14" Foreground="White"/>
        <Label HorizontalAlignment="Right" Content="{Binding Classcode}" Grid.Row="2" VerticalAlignment="Bottom" FontSize="14" Foreground="White"/>

        <Label x:Name="TeacherLabel" HorizontalAlignment="Left" Content="{Binding Teacher}" Grid.Row="1" VerticalAlignment="Bottom" FontSize="14" Visibility="Collapsed" Foreground="White"/>

    </Grid>
</UserControl>
